#include<stdio.h>
#define l1.p1 s1
#define l2.p2 s2
typedef struct point
{
	int x,y;
}point;
typedef struct line
{
	point p1,p2;
}line;
lscommon_point(line l1,line l2)
{
	int m1,m2;
	m1=(l1.p2.y-l1.p1.y)/(l1.p1.x-l1.p2.x);
	m2=(l2.p2.y-l2.p1.y)/(l2.p1.x-l1.p2.x);
	
/*	if(m1*m2==0)
		printf("\n lines are not intersecting");

	else
		printf("\n lines are intersecting");
*/
}
int main()
{
	line l1,l2;
	printf("\n enter values for line 1");
	scanf("%d %d %d %d",&s1.x,&l1.p1.y,&l1.p2.x,&l1.p2.y);
	printf("\n enter values for line 1");
	scanf("%d %d %d %d",&l2.p1.x,&l2.p1.y,&l2.p2.x,&l2.p2.y);
	lscommon_point(l1,l2);
	
}

