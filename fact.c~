#include<stdio.h>
int fact(int n)
{
	if(n==1)
	return 1;
	else
	return n*fact(n-1);
}
	int factorial(int n)
	{

	int f=1,i;
	for(i=1;i<=n;i++)
	f=f*i;
	return f;
	}
int main()
{
	int n;
	printf("Enter a number\n");
	scanf("%d",&n);
	printf("FACTORIAL USING RECURSION %d\n",fact(n));
	printf("factorial using function %d\n",factorial(n));
	return 0;
}
