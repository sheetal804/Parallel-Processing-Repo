echo enter two numbers
read a b

echo "enter a choice 1:addition 2:subtraction 3:multiplication 4:divition 5:stop"
read a
while[ a -eq 5 ]
case $a in
1) echo sum is `expr a + b`
	;;
2)echo sum is `expr a - b`
	;;
3)echo sum is `expr a \* b`
	;;
4)echo sum is `expr a / b`
	;;
*)echo wrong choice
esac
